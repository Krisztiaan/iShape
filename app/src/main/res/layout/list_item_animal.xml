<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content" >

    <TextView
        android:textAppearance="@android:style/TextAppearance.DeviceDefault.Small"
        android:id="@+id/animal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:padding="@dimen/text_top_bottom_padding"
        android:textColor="@android:color/white"
        android:paddingBottom="@dimen/text_top_bottom_padding"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"/>

    <Button
        android:id="@+id/trade"
        style="@android:style/Widget.DeviceDefault.Button.Small"
        android:layout_width="wrap_content"
        android:layout_height="25dp"
        android:paddingLeft="5dp"
        android:paddingRight="5dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:background="@drawable/green_button_selector"
        android:textColor="@android:color/white"
        android:text="@string/trade" />

    <org.apmem.tools.layouts.FlowLayout
        android:id="@+id/animalCage"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_newLine="true"
        android:layout_below="@+id/trade">

    </org.apmem.tools.layouts.FlowLayout>


</RelativeLayout>