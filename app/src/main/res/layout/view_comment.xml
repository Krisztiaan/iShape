<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  xmlns:tools="http://schemas.android.com/tools">

  <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="6dp">

    <com.mikhaellopez.circularimageview.CircularImageView
      android:id="@+id/imgUser"
      android:layout_width="40dp"
      android:layout_height="40dp"
      app:civ_border_width="0dp"
      tools:src="@drawable/bagoly" />

    <LinearLayout
      android:layout_width="0dp"
      android:layout_height="wrap_content"
      android:layout_weight="1"
      android:orientation="vertical"
      android:paddingLeft="12dp">

      <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="6dp"
        android:gravity="top"
        android:orientation="horizontal">

        <TextView
          android:id="@+id/txtAuthor"
          android:layout_width="0dp"
          android:layout_height="wrap_content"
          android:layout_weight="1"
          android:ellipsize="end"
          android:singleLine="true"
          android:textStyle="bold"
          tools:text="Az Atyauristen" />

        <TextView
          android:id="@+id/txtSentTime"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"

          android:layout_gravity="top"
          android:layout_marginLeft="8dp"
          android:alpha=".7"
          android:textSize="12dp"
          tools:text="one second ago" />
      </LinearLayout>

      <TextView
        android:id="@+id/txtMessage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ellipsize="end"
        tools:text="Szép. Ez pedig egy szép hosszú komment. Így lehet megnézni, hogy megfelelően működik e a sorhossz limitálása a külömböző kontextusokban :)" />
    </LinearLayout>
  </LinearLayout>
</merge>