<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/bg_with_blue_bottom_border"
    android:orientation="horizontal">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical"
        android:padding="@dimen/text_top_bottom_padding">

        <TextView
            android:id="@+id/point"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="@dimen/text_top_bottom_padding"
            android:text="@string/pts"
            android:textAppearance="@android:style/TextAppearance.DeviceDefault.Large"
            android:textColor="@color/dark_blue" />

        <TextView
            android:id="@+id/category"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="right"
            android:padding="@dimen/text_top_bottom_padding"
            android:text="test"
            android:textAppearance="@android:style/TextAppearance.DeviceDefault.Small"
            android:textColor="@color/light_blue" />

        <TextView
            android:id="@+id/endorser"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="right"
            android:padding="@dimen/text_top_bottom_padding"
            android:text="test"
            android:textAppearance="@android:style/TextAppearance.DeviceDefault.Small"
            android:textColor="@color/light_blue" />

        <TextView
            android:id="@+id/description"
            android:layout_width="wrap_content"
            android:layout_height="80dp"
            android:gravity="left"
            android:ellipsize="end"
            android:paddingLeft="@dimen/text_top_bottom_padding"
            android:paddingRight="@dimen/text_top_bottom_padding"
            android:paddingBottom="15dp"
            android:lines="3"
            android:paddingTop="15dp"
            android:text="desc"
            android:textAppearance="@android:style/TextAppearance.DeviceDefault.Small"
            android:textColor="@color/light_blue"
            android:textStyle="italic" />
    </LinearLayout>

    <org.apmem.tools.layouts.FlowLayout
        android:id="@+id/animalCage"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:background="@color/light_blue"
        android:orientation="horizontal"
        app:layout_newLine="true" />

</LinearLayout>