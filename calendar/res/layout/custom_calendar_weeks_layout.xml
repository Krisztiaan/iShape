        android:layout_weight="1"
        android:gravity="center"
        android:textColor="@color/selected_day_background"
        android:textAllCaps="false"
        android:tag="dayOfWeek1"
        android:text="sun" />

    <TextView
        style="@style/CalendarView.DayOfTheWeek"
        android:layout_weight="1"
        android:gravity="center"
        android:textColor="@color/selected_day_background"
