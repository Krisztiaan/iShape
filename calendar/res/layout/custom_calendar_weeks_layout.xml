        android:tag="dayOfWeek2"
        android:text="mon" />

    <TextView
        style="@style/CalendarView.DayOfTheWeek"
        android:layout_weight="1"
        android:gravity="center"
        android:textColor="@color/selected_day_background"
        android:textAllCaps="false"
        android:tag="dayOfWeek3"
        android:text="tue" />

    <TextView
        style="@style/CalendarView.DayOfTheWeek"
        android:layout_weight="1"
        android:gravity="center"
        android:textColor="@color/selected_day_background"
        android:textAllCaps="false"
        android:tag="dayOfWeek4"
        android:text="wed" />

    <TextView
        style="@style/CalendarView.DayOfTheWeek"
        android:layout_weight="1"
        android:gravity="center"
        android:textColor="@color/selected_day_background"
        android:textAllCaps="false"
        android:tag="dayOfWeek5"
        android:text="thu" />

    <TextView
        style="@style/CalendarView.DayOfTheWeek"
        android:layout_weight="1"
        android:gravity="center"
        android:textColor="@color/selected_day_background"
        android:textAllCaps="false"
        android:tag="dayOfWeek6"
        android:text="fri" />

    <TextView
        style="@style/CalendarView.DayOfTheWeek"
        android:layout_weight="1"
        android:gravity="center"
        android:textColor="@color/selected_day_background"
        android:textAllCaps="false"
        android:tag="dayOfWeek7"
        android:text="sat" />
</LinearLayout>